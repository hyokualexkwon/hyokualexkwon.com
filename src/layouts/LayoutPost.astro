---
import PostMeta from '~/components/PostMeta.astro'
import type { Post } from '~/types'

interface Props {
  post: Post
}

const { post } = Astro.props
---

<article
  class="prose prose-h1:text-6 prose-h2:text-5.5 prose-h3:text-5 prose-h4:text-4.5 prose-h5:text-4 prose-h6:text-3.5"
>
  <PostMeta post={post} />
  <slot />
</article>
